<!DOCTYPE html>
<html>
  <link
    href="data:image/x-icon;base64,"
    rel="icon"
    type="image/x-icon"
  />
  <head>
    <meta charset="UTF-8" />
    <title>This Reeks</title>
    <link rel="import" href="topbar.html" id="topbar" />
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-Zenh87qX5JnK2Jl0vWa8Ck2rdkQ2Bzep5IDxbcnCeuOxjzrPF/et3URy9Bv1WTRi"
      crossorigin="anonymous"
    />
    <link
      href="https://cdnjs.cloudflare.com/ajax/libs/mdb-ui-kit/6.0.0/mdb.min.css"
      rel="stylesheet"
    />
  </head>

  <body>
    <div class="container-xl border rounded my-5">
      <h1 class="text-center mt-5 mb-4 ml-4 mr-4 text-secondary">
        Welcome to This Reeks!
      </h1>

      <div class="row p-4">
        <div class="col-4 p-4">
          <form action="/" method="POST" target="my_iframe">
            <div class="form-group">
              <div class="textInput">
                <label class="mt-3 mb-3" for="headlineInput"
                  >Type or paste the headline you would like to check!</label
                >
                <textarea
                  class="form-control"
                  id="headlineInput"
                  name="headline"
                  aria-label="With textarea"
                  rows="3"
                  onfocus="this.value=''"
                >
Headline...</textarea
                >
                <!-- <input type="text" name="headline" placeholder="Headline here" /> -->
                <button class="btn btn-primary bg-gradient mt-3" type="submit">
                  Does it reek?
                </button>
              </div>
            </div>
          </form>
        </div>

        <div class="col-8 p-4">
          <iframe
            class="w-100"
            name="my_iframe"
            src=""
            scrolling="no"
            height="525"
          ></iframe>
        </div>
      </div>

      <div class="row p-4">
        <div class="col-2"></div>

        <div class="col-8">
          <h3 class="text-center text-secondary p-3">Today's top bullshit:</h3>
          <div class="list-group">
            <% newsHeadlines.forEach((headline) => { %>
            <a
              href="<%=headline.url%>"
              class="list-group-item list-group-item-action"
              target=" _blank"
              rel="noopener noreferrer"
            >
              <div class="row">
                <div class="col-10"><%= headline.title %></div>
                <div class="col-2">
                  <%= headline.percentage%>% bullshit
                  <div class="progress">
                    <div
                      class="progress-bar bg-danger"
                      role="progressbar"
                      aria-valuenow="<%= headline.percentage%>"
                      style="width: <%= headline.percentage%>%"
                      aria-valuemin="0"
                      aria-valuemax="100"
                    ></div>
                  </div>
                </div>
              </div>
            </a>
            <% }); %>
          </div>
        </div>
        <div class="col-2"></div>
      </div>
    </div>

    <!-- JavaScript Bundle with Popper -->
    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-OERcA2EqjJCMA+/3y+gxIOqMEjwtxJY7qPCqsdltbNJuaOe923+mo//f6V8Qbsw3"
      crossorigin="anonymous"
    ></script>
    <script
      type="text/javascript"
      src="https://cdnjs.cloudflare.com/ajax/libs/mdb-ui-kit/6.0.0/mdb.min.js"
    ></script>
  </body>
</html>
