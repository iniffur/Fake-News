{
  "compilerOptions": {
    "module": "commonjs",
    "esModuleInterop": true,
    "target": "es6",
    "lib": ["es6", "dom"],
    // "types": ["cypress", "node", "jest"], -> removed
    "noImplicitAny": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "outDir": "dist",
    "baseUrl": ".",
    "paths": {
      "*": ["node_modules/*"]
    }
  },
    //"**/*.ts" added to include
  "include": ["src/**/*", "**/*.ts"],
  // exclude has been added
  "exclude": [
    "./cypress.config.ts"
  ]
}
